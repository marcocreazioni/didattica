 <script>
   var a = "il mio testo";
   var b = " & ";
   var c = "il tuo testo";
  
   var d = a + b + c;
  
  </script>
  <br><br>
  <button type="button" style="background-color:orange;padding:10px" onclick="alert(d)">Scrivi</button>
  
 
  <button type="button" style="background-color:orange;padding:10px" oncontextmenu="alert(d)">Scrivi</button>
  <button type="button" style="background-color:orange;padding:10px" onkeydown="alert(d)">Scrivi</button>
   <button type="button" style="background-color:orange;padding:10px" onclick="document.getElementById('casa').innerHTML = d;">Scrivi</button>


  
