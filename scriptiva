<body>
    <script>
     
    // Displaying a variable value 
     var prezzo = 360;
     var iva = 0.22; 
     var valoreiva = prezzo * iva;
     var prezzoivato = prezzo + valoreiva;
    
   document.write("Prezzo comprensivo di Iva: " + prezzoivato + "€<br>");
   document.write("Iva: " + valoreiva + "€");
    </script>
</body>
